<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="4dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/imageview_std"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:src="?android:attr/textSelectHandle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten: "
            android:textSize="24dp"
            android:textColor="#5A0202"
            android:id="@+id/name_std_tt"
            android:layout_toEndOf="@+id/imageview_std"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT: "
            android:textSize="20dp"
            android:id="@+id/phonestd_tt"
            android:layout_below="@+id/name_std_tt"
            android:layout_toEndOf="@+id/imageview_std"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0846818518 "
            android:textSize="20dp"
            android:id="@+id/contextphone_tt"
            android:layout_below="@+id/name_std_tt"
            android:layout_toEndOf="@+id/phonestd_tt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DAD8D8"

            android:layout_marginTop="5dp"
            android:layout_below="@id/contextphone_tt"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>